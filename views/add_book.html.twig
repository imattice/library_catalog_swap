<html>
    <head>
        <title>Librarian Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>Librarian's Home Page</h1>
            <form action='/librarian_home' method='post'>

                <h2><strong>Title:</strong></h2>
                <label for='title'></label>
                <input id='title' name='title' type='text'>

                <h2><strong>Author:</strong></h2>
                <label for='first_name'>
                    First Name:</label>
                <input id='first_name' name='first_name' type='text'>

                <label for='last_name'>Last Name:</label>
                <input id='last_name' name='last_name' type='text'>
                <br>
                <br>
                <button type='submit'>Add Book</button>
            </form>

            {% if books is not empty %}
                <p>Here are all of your current titles:</p>
                <ul>
                    {% for book in books %}
                    <li><a href="/books/{{ book.getId }}">{{ book.getTitle }}<br>
                        {% set authors = book.getAuthor %}
                        {% for author in authors %}
                        {{ author.getLastName }}, {{ author.getFirstName }}</li>
                        {% endfor %}

                    {% endfor %}
                </ul>
            {% endif %}

            <a href='/'>Library Home</a>

            <form action="/clear_library" method="post">
                <button type="submit" class="btn-danger">Delete library!</button>
            </form>
        </div>
    </body>
</html>
